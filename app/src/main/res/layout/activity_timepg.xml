<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Timepg"
    android:background="@drawable/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <Space
        android:layout_width="match_parent"
        android:layout_height="100dp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lunch Timings"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textStyle="bold"
            android:gravity="center_horizontal"/>
        <Space
            android:layout_width="match_parent"
            android:layout_height="5dp" />


        <EditText
        android:id="@+id/sText"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:background="@android:color/white"
        android:drawableLeft="@drawable/ic_action_time"
        android:ems="10"
        android:hint="Lunch start time"
        android:inputType="number" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <EditText
        android:id="@+id/eText"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:background="@android:color/white"
        android:drawableLeft="@drawable/ic_action_time"
        android:ems="10"
        android:hint="Lunch end time"
        android:inputType="number" />
    <Space
        android:layout_width="match_parent"
        android:layout_height="30dp" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Dinner Timings"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textStyle="bold" />
        <Space
            android:layout_width="match_parent"
            android:layout_height="5dp" />


        <EditText
            android:id="@+id/dsText"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:background="@android:color/white"
            android:drawableLeft="@drawable/ic_action_time"
            android:ems="10"
            android:hint="Dinner start time"
            android:inputType="number" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <EditText
            android:id="@+id/deText"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:background="@android:color/white"
            android:drawableLeft="@drawable/ic_action_time"
            android:ems="10"
            android:hint="Dinner end time"
            android:inputType="number" />
        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />
       <Button
           android:id="@+id/tsbutton"
           android:layout_width="170dp"
           android:layout_height="wrap_content"
           android:layout_gravity="center_horizontal"
           android:background="@drawable/style_button"
           android:text="Set Time"
           android:textAppearance="@style/TextAppearance.AppCompat.Medium.Inverse"
           android:textStyle="bold"/>

    </LinearLayout>
</LinearLayout>