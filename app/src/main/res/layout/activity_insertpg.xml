<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".insertpg"
    android:background="@drawable/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <Space
        android:layout_width="match_parent"
        android:layout_height="100dp" />
        <EditText
            android:id="@+id/custid"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:background="@android:color/white"
            android:drawableLeft="@drawable/ic_action_id"
            android:ems="10"
            android:hint="Enter Name"
            android:inputType="textPersonName" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />


    <EditText
        android:id="@+id/custphone"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:background="@android:color/white"
        android:drawableLeft="@drawable/ic_action_phone"
        android:ems="10"
        android:hint="Enter Phone No"
        android:inputType="phone" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <EditText
        android:id="@+id/custaddress"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:background="@android:color/white"
        android:drawableLeft="@drawable/ic_action_address"
        android:ems="10"
        android:hint="Enter Address(current)"
        android:inputType="textPostalAddress" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />

        <CheckBox
            android:id="@+id/checklunch"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:background="@android:color/white"
            android:text="Lunch" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />


        <CheckBox
            android:id="@+id/checkdinner"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:background="@android:color/white"
            android:text="Dinner" />
    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />

        <EditText
            android:id="@+id/custId"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:background="@android:color/white"
            android:drawableLeft="@drawable/ic_action_amount"
            android:ems="10"
            android:hint="Amount Paid"
            android:inputType="numberDecimal" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <Button
            android:id="@+id/insert"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/style_button"
            android:text="Add Customer"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium.Inverse"
            android:textStyle="bold" />

        </LinearLayout>

</LinearLayout>